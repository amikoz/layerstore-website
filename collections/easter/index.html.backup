                document.getElementById('selectedColor').value = 'standard';

                // Reset main color buttons (Wie auf dem Foto / Individuell)
                document.querySelectorAll('#colorSelection > div > .color-option').forEach(btn => {
                    btn.classList.remove('active');
                    btn.style.borderColor = '#e7e5e4';
                    btn.style.background = 'white';
