            // Load saved preferences
            const savedPrefs = loadUserPreferences(productId);
            if (savedPrefs.size !== 'standard' || savedPrefs.color !== 'standard') {
                document.getElementById('selectedSize').value = savedPrefs.size;
                document.getElementById('selectedColor').value = savedPrefs.color;

                // Update size button active state
                const sizeOptions = document.querySelectorAll('.size-option');
