                // Update color button active state
                const colorOptions = document.querySelectorAll('#colorSelection > div > .color-option');
                colorOptions.forEach(btn => btn.classList.remove('active'));
                const activeColorBtn = document.querySelector(`#colorSelection > div > .color-option[data-color="${savedPrefs.color}"]`);
