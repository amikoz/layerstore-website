                    const additionalColors = document.getElementById('additionalColors');
                    if (additionalColors) {
                        additionalColors.querySelector('button').textContent = colorName || 'Farbe ausw√§hlen';
                    }
                }
            }

            // Show/hide size option
            const noSizeProducts = ['legsegg'];
            const sizeSection = document.getElementById('sizeSelection');
            if (noSizeProducts.includes(productId)) {
                sizeSection.style.display = 'none';
                document.getElementById('selectedSize').value = 'standard';
            } else {
                sizeSection.style.display = 'block';
                document.getElementById('selectedSize').value = 'standard';
                // Reset size selection
                document.querySelectorAll('.size-option').forEach(btn => btn.classList.remove('active'));
                document.querySelector('.size-option[data-size="standard"]').classList.add('active');
