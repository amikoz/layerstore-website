                    activeColorBtn.classList.add('active');
                    activeColorBtn.style.borderColor = '#ea580c';
                    activeColorBtn.style.background = '#fff7ed';
                } else if (savedPrefs.color === 'standard') {
                    document.querySelector('#colorSelection > div > .color-option[data-color="standard"]').classList.add('active');
                }

                // If custom color was selected, show color name
                if (savedPrefs.color !== 'standard') {
                    const colorNames = {
                        asphalt: 'Asphalt', blue: 'Blau', deeppink: 'Dunkelpink',
                        lemonyellow: 'Zitronengelb', lightgreen: 'Hellgr√ºn', mintgreen: 'Minzengr√ºn',
                        newpink: 'Neonpink', olivegreen: 'Oligr√ºn', orange: 'Orange',
                        purple: 'Lila', red: 'Rot', skyblue: 'Himmelblau', yellow: 'Gelb'
                    };
